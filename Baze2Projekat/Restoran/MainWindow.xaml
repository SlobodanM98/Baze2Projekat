<Window x:Class="Restoran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restoran"
        xmlns:viewModel ="clr-namespace:Restoran.ViewModel"
        xmlns:views="clr-namespace:Restoran.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.DataContext>
		<viewModel:MainWindowViewModel/>
	</Window.DataContext>
	<Window.Resources>
		<DataTemplate DataType="{x:Type viewModel:GradViewModel}">
			<views:GradView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewModel:ProizvodViewModel}">
			<views:ProizvodView/>
		</DataTemplate>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="0" Margin="2">
			<Menu DockPanel.Dock="Top" Height="20">
				<MenuItem Header="Grad" Width="250" FontSize="14" Command="{Binding KarticeCommand}"
                          CommandParameter="Grad"/>
				<MenuItem Header="Proizvod" Width="250" FontSize="14" Command="{Binding KarticeCommand}"
                          CommandParameter="Proizvod"/>
				<MenuItem Header="Network Chart" Width="280" FontSize="14" Command="{Binding KarticeCommand}"
                          CommandParameter="NetworkChart"/>
			</Menu>
		</DockPanel>
		<Grid Grid.Row="1" Height="Auto">
			<ContentControl Content="{Binding TrenutniViewModel}"/>
		</Grid>
	</Grid>
</Window>
